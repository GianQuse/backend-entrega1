<h1>Productos en tiempo real</h1>

<ul id="productsList">
  {{#each products}}
    <li>
      {{this.title}} - ${{this.price}}
      <button onclick="deleteProduct('{{this.id}}')">Eliminar</button>
    </li>
  {{/each}}
</ul>

<h2>Agregar producto</h2>

<form id="productForm">
  <input type="text" name="title" placeholder="TÃ­tulo" required />
